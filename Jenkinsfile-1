pipeline {
    agent any

    tools {
        nodejs 'NODE_HOME'
    }

  stages {
  
    stage('Git') { // for display purposes
        // Get some code from a GitHub repository
       git 'https://github.com/eyadrihmi/jenkins-example-ansible.git'
       
    }
    stage('Hello') {
      steps {
        sh '''
          ansible --version
          ansible-playbook --version
          ansible-galaxy --version
        '''
      }
    }
  }
}
